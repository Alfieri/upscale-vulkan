@using UpscaleVulkan.Web.Model

@if (state is ComponentState.Error)
{
    <div class="alert alert-danger" role="alert">
        Please go to settings and choose a file
    </div>
}
else
{
    <h5>Upscale video @upscaleSettings.VideoFile</h5>
    <div class="container">
        <div class="row">
            <VideoInfo Video="@video"/>
        </div>
        <div class="row">
            <button type="button" class="btn btn-primary" @onclick="StartUpscaling">Start Upscale</button>
        </div>
    </div>
}